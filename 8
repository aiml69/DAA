#include <stdio.h>  
#define MAX 100  
#define INF 99999  
 
int main() {  
int n, graph[MAX][MAX];  
printf("Enter number of vertices: ");  
scanf("%d", &n);  
printf("Enter adjacency matrix (use %d for INF):\n", INF);  
for (int i = 0; i < n; i++)  
for (int j = 0; j < n; j++)  
scanf("%d", &graph[i][j]);  
// Floyd's Algorithm  
for (int k = 0; k < n; k++) {  
for (int i = 0; i < n; i++) {  
for (int j = 0; j < n; j++) {  
                if (graph[i][k] + graph[k][j] < graph[i][j])  
                    graph[i][j] = graph[i][k] + graph[k][j];  
            }  
        }  
    }  
  
    printf("\nAll-Pairs Shortest Path Matrix:\n");  
    for (int i = 0; i < n; i++) {  
        for (int j = 0; j < n; j++) {  
            if (graph[i][j] == INF)  
                printf("INF ");  
            else  
                printf("%3d ", graph[i][j]);  
        }  
        printf("\n");  
    }  
    return 0;  
}  
