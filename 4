#include <stdio.h>  
#define MAX 100  
 
int graph[MAX][MAX], visited[MAX], n;  
void DFS(int v) {  
visited[v] = 1;  
    for (int i = 0; i < n; i++) {  
        if (graph[v][i] && !visited[i])  
            DFS(i);  
    }  
}  
  
int main() {  
    printf("Enter number of vertices: ");  
    scanf("%d", &n);  
    printf("Enter adjacency matrix:\n");  
    for (int i = 0; i < n; i++)  
        for (int j = 0; j < n; j++)  
            scanf("%d", &graph[i][j]);  
    for (int i = 0; i < n; i++) visited[i] = 0;  
    DFS(0);  
    int connected = 1;  
    for (int i = 0; i < n; i++) {  
        if (!visited[i]) {  
            connected = 0;  
            break;  
        }  
    }  
if (connected)  
printf("The graph is connected.\n");  
else  
printf("The graph is not connected.\n");  
return 0;  
}  
